<p id="notice"><%= notice %></p>

<h1>Monitored Urls</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monitored_urls.each do |monitored_url| %>
      <tr>
        <td><%= monitored_url.url %></td>
        <td><%= monitored_url.active %></td>
        <td><%= link_to 'Show', monitored_url %></td>
        <td><%= link_to 'Edit', edit_monitored_url_path(monitored_url) %></td>
        <td><%= link_to 'Destroy', monitored_url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Monitored Url', new_monitored_url_path %>
